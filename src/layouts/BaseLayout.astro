---
export const siteTitle = 'Yaroslav Lapin'

export interface Props {
  title?: string
  ogImageUrl?: string
  metadescription?: string
}
const {
  metadescription,
  title: propsTitle,
  ogImageUrl: propsOgImageUrl,
} = Astro.props as Props

const title = propsTitle || siteTitle
const ogImageUrl =
  propsOgImageUrl ||
  `https://og-image.now.sh/${encodeURI(
    siteTitle
  )}.png?theme=light&md=0&fontSize=75px&images=https%3A%2F%2Fassets.zeit.co%2Fimage%2Fupload%2Ffront%2Fassets%2Fdesign%2Fnextjs-black-logo.svg`
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title}</title>
    <!-- TODO: add GA for UA-5041583-11 see https://unpkg.com/astro-analytics@2.1.1/src/GoogleAnalytics.astro -->
    <meta
      name="description"
      content={metadescription ||
      'Yaroslav (JLarky) Lapin web developer extraordinaire'}
    />
    <meta property="og:image" property="og:image" content={ogImageUrl} />
    <meta property="og:title" name="og:title" content={siteTitle} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="generator" content="Astro" />
    <script type="text/partytown">
      ;(function (w, d, s, l, i) {
        w[l] = w[l] || []
        w[l].push({ 'gtm.start': new Date().getTime(), event: 'gtm.js' })
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != 'dataLayer' ? '&l=' + l : ''
        j.async = true
        j.src = 'https://www.googletagmanager.com/gtm.js?id=' + i + dl
        f.parentNode.insertBefore(j, f)
      })(window, document, 'script', 'dataLayer', 'GTM-WBRN3FB')
    </script>
  </head>
  <body>
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-WBRN3FB"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe>
    </noscript>
    <slot />
  </body>
</html>
