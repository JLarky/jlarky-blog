---
import { parseISO, format } from 'date-fns'

// Example: HelloWorld.astro
export interface Props {
  dateString: string
  format?: string
}
const { dateString, format: fmt = 'd LLLL yyyy' } = Astro.props as Props;
const date = parseISO(dateString)
---

<time datetime={dateString}>{format(date, fmt)}</time>
